# 服務器配置
PORT=3000
NODE_ENV=development

# ========================================
# 選擇郵件服務類型
# ========================================
# 可選值: 'outlook' | 'gmail' | 'imap'
EMAIL_SERVICE_TYPE=imap

# ========================================
# IMAP/SMTP 通用配置 (適用於大部分郵件服務)
# ========================================
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-password

# IMAP 配置
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_TLS=true

# SMTP 配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# ========================================
# Gmail 配置 (使用應用專用密碼)
# ========================================
# 1. 前往 Google 帳戶設定
# 2. 安全性 > 兩步驟驗證
# 3. 應用程式密碼 > 生成密碼
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-specific-password

# ========================================
# Microsoft Outlook / Office 365 配置
# ========================================
# 需要在 Azure Portal 註冊應用程式
# https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps/ApplicationsListBlade

# Azure AD 應用程式設定
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id
AZURE_REDIRECT_URI=http://localhost:3000/auth/callback

# Microsoft Graph API 權限範圍
GRAPH_SCOPES=Mail.Read,Mail.ReadWrite,Mail.Send,User.Read

# ========================================
# Outlook.com 個人帳戶配置 (簡化版)
# ========================================
OUTLOOK_USER=your-email@outlook.com
OUTLOOK_PASSWORD=your-password
OUTLOOK_IMAP_HOST=outlook.office365.com
OUTLOOK_IMAP_PORT=993
OUTLOOK_SMTP_HOST=smtp-mail.outlook.com
OUTLOOK_SMTP_PORT=587

# ========================================
# AI 功能配置 (可選)
# ========================================
# OpenAI API (用於 AI 郵件分析)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# ========================================
# 安全配置
# ========================================
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret

# ========================================
# 資料庫配置 (可選 - 用於存儲郵件快取和筆記)
# ========================================
DB_TYPE=sqlite
DB_PATH=./data/outlook-ai.db
# 或使用 MongoDB
# MONGODB_URI=mongodb://localhost:27017/outlook-ai

# ========================================
# 功能開關
# ========================================
ENABLE_AI_ANALYSIS=true
ENABLE_EMAIL_TRACKING=true
ENABLE_AUTO_FOLLOWUP=true
